/**app.wxss**/
page{
  
}
text{
  font-family: Microsoft Yahei,"Times New Roman",Georgia,Serif,STCaiyun;
}
.container {
  height: 100%;
  display: flex;
  flex-direction: column;
  align-items: center;
  justify-content: space-between;
  padding: 200rpx 0;
  box-sizing: border-box;
} 


.blank{
  height: 50px;
}

.fix-bottom{
  display: flex;
  flex-direction: row;
  position: fixed;
  bottom: 0px;
  height: 40px;
  align-items: center;
  justify-content: space-between;
  width: 100%;
  background: #fff;
  border-top:1px solid #ccc; 
  z-index: 999; 
}

.wrap-button{
  height: 40px;
  width: 50px;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  margin: 0px 0px;
}
.wrap-button image{
  height: 30px;
  width: 30px;
  position: absolute;
  top: 0px;
}
.wrap-button text{
  font-size: 12px;
  color:#949491;
  position: absolute;
  top: 25px;
}
.wrap-button button{
  height: 40px;
  width: 30px;
   margin-left: 0px;
  margin-right: 0px;
  padding: 0px; 
  position: absolute;
  top: 0px;
  opacity: 0;
  z-index: 99;
}
.wrap-button button::after{
  border: 0px; 
}



.button-play-music{
  display: flex;
  position: absolute;
  flex-direction: row;
  align-content: center;
  align-items: center; 
  justify-content: flex-start;
  border-top: 1px solid #ccc;
  bottom: 0px;
  left: 0px; 
  padding: 3px 5px;
  background: rgba(255, 255, 255, 0.4);
}
.button-play-music-1{
  display: flex; 
  flex-direction: row;
  align-content: flex-start;
  align-items: flex-start;  
  margin-left: 5px;
  position: relative;
}
.button-play-music-1 text{
  font-size: 13px;
  overflow: hidden;
  white-space:  nowrap;
  text-overflow:ellipsis;
}
.musicLoading{
  font-size: 12px;
  color: #666;
  position: absolute;
  top: 8px;
  right: 35px;
}
.button-play-music image{
  height: 30px;
  width: 30px;
}


.musicSound{
  width: 10px;
  height: 5px;
  background: rgba(255, 79, 0, 0.7);
  position: absolute;
  bottom: 0px;
  transition:transform 500ms ease 0ms;  
  transform-origin:100% 100% 0px;
}

.top{
  position: fixed;
  width: 100%;
  top: 0px;
  left: 0px;
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: flex-start;
  height: 65px; 
  padding-top: 10px;
  padding-left: 10px;
  background: rgba(0, 255, 255, 0); 
}
.top-title{
  font-family: Microsoft Yahei,"Times New Roman",Georgia,Serif;
  font-size: 16px;
  font-weight: bold;
  color:#2c2c2c;
}
.topPlaceHolder{
  height: 75px;
  width: 100%;
   background: rgba(0, 255, 255, 0); 
}

.floatIcon{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  position: absolute; 
  border-radius: 50%;
  background: rgba(255, 255, 255, 0.8);
}
.floatIcon image{
  height:30px;
  width:30px;
}
.comment-box-mask{
  display: flex;
  position: fixed;
  top: 0px;
  left: 0px; 
  background: rgba(0, 0, 0, 0.8);
  height: 100%;
  z-index: 100;
}

.comment-box{ 
  margin-top:100px; 
  height: 200px;
  padding: 10px;
  display: flex;
  flex-direction: column;
  background: #dbdbdb;
}
.comment-box-1{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: space-between;
}
.comment-box textarea{
  font-size: 15px;
  color: #000; 
  padding: 5px;
  height:100px;
  background: #fff;
  margin: 10px; 
}

.scroll-item-comment{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: flex-start;
  justify-content: flex-start;
  background: #fff;
  margin-top: 5px;
  padding: 5px;
}
.scroll-item-comment-1{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
}
.scroll-item-comment-1 image{
  height: 30px;
  width: 30px;
  border-radius: 50%;
  border:2px solid #fff;
}
.scroll-item-comment-1 text{
  max-width: 40px;
  overflow: hidden;
  font-size: 12px; 
  white-space: nowrap;
  text-overflow: ellipsis;
  color: #40d37a; 
} 

.scroll-item-comment-2{
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  align-items: flex-start;
}

.scroll-item-comment-3{
   display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: flex-start;
}

.nomoredata{
  margin-top:10px ;
  margin-bottom:10px; 
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
}
.nomoredata text{
  font-size: 12px;
  color: #888;
}

.myspace{
  position: absolute;
  bottom: 5px;
  left: 5px;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
}
.myspace image{
  height: 35px;
  width: 35px;
}