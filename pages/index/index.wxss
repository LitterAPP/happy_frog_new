.container { 
  position: relative;
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  overflow: hidden;
  overflow-x: hidden;
  overflow-y: hidden;
}

.record {
  position: absolute;  
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: center;
  overflow:hidden;
  white-space:  nowrap;
   /*border-bottom: 1px dotted #188A00;*/
}

.record image {
  height: 50px;
  width: 50px;
}

.record-1 {
  position: relative;
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
}

.record-1 text {
  font-size: 14px;
}

.huanbian {
  position: absolute;
}

.exchange {
  position: absolute;
}

.list-item { 
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: space-between;
  border-bottom: 1px solid #ff9e73;
}

.list-item-self{  
  position: relative;
  display: inline-block;  
}


.nonthing{
   display: flex;
  position: absolute;
  flex-direction: column;
  align-content: center;
  align-items: center;   
  left: 50%;
  width: 200px;
  margin-left:-100px;
}

.avatar-item {
  display: flex;
  position: absolute;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
  left: 50%;
  top:10px;
}

.avatar-item image {
  border-radius: 50%;
  height: 30px;
  width: 30px;
}

.nickName {
  width:60px; 
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
  font-size: 13px; 
  color: #2c2c2c; 
  text-align: center;
}

.playImg {
 
}

.book-flow-item {
  display: flex;
  width: 100px;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
  padding: 5px 2px;
  position: absolute;
  background: rgba(255, 255, 255, 0.2);
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
}

.book-flow-item image {
  height: 30px;
  width: 30px;
}

.book-flow-item text {
  font-size: 15px;
  color: #000;
}

.flow-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
  position: absolute;
  left: 50%;
  top:50px;
}

.flow-item image {
  height: 30px;
  width: 30px;
}

.flow-item text {
  font-size: 15px;
  color: #000;
}

.play-time-item {
  display: flex;
  flex-direction: column;
  align-items: center;
  align-content: center;
  margin: 5px 5px;
}
.play-time-item-self{
  display: flex;
  flex-direction: row;
  align-items:  flex-start;
  align-content: flex-start;
  justify-content: center;
  position: absolute;
  left: 50%;
  top: 80px;
}

.play-time-item text {
  font-size: 13px;
  color: #ccc;
  display: block;
  text-align: center;
}

.share-item {
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: space-between;
  background: rgba(255, 255, 255, 0.3);
  position: absolute;
  top: 0px;
  left: 0px;
  z-index: 9;
  border-top-right-radius: 20px;
  border-bottom-right-radius: 20px;
}

.bookName{
  display: flex;
  flex-direction: column;
  align-content: center;
  align-items: center;
  position: absolute;
  bottom: 0px;
  left: 0px;
  background: #fff;  
}
.bookName text { 
  text-align: center; 
  font-size: 16px;
  color: #000;
  height: 30px;
  line-height: 30px;
  margin-right: 10px;
  /*background: rgba(24,138,0,0.5);*/ 
}

.updateTime {
  position: absolute;
  top: 5px;
  left: 5px;
  font-size: 13px;
  color: #2c2c2c;
}

.list-item-self-back{
  position: absolute;
  left: 5px;
  top: -10px;
  transform-origin: 50% 50% 50% 0;
  transform:rotate(180deg);  
}

.list-item-self-more{
  position: absolute;
  right: 5px;
  top: -10px; 
}

