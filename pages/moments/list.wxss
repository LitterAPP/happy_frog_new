

.tool-bar{
  display: flex; 
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: center;

}
.m-item{
  display: flex;
  flex-direction: row;
  align-content: flex-start;
  align-items: start;
  justify-content: space-between;
  border-bottom: 1px solid #E6E6FA;
  padding:5px 0px; 
}

.m-item-avatar image{
  height: 35px;
  width: 35px;
  border-radius: 50%;
  border: 2px solid #ccc;
  margin: 0px 5px;
}

.m-item-content{
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  align-items: flex-start;
  justify-content:  flex-start;
  margin: 0px 5px;
}

.m-item-content-nickname{
  font-size: 14px;
  color: #40d37a;
  font-weight: bold;
  max-width: 120px;
  overflow: hidden; 
  white-space: nowrap;
  text-overflow: ellipsis;
}

.m-item-content-title{
   font-size: 14px;
  color: #000;
  margin-top:5px; 
}

.m-item-content image{
  height: 100px;
  width: 100px;
   margin-top:5px;
}

.m-item-content-time{
  font-size: 12px;
  color: #bfbfbf;
  margin-top:5px; 
}

.m-item-content-other{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: space-between;
  margin-top:5px; 
  background: #EBEBEB;
  border-radius: 6px;
}

.m-item-content-other-1{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: space-between;  
  margin:5px;
  
}

.m-item-content-other-1 image{
  height: 25px;
  width: 25px;
}
.m-item-content-other-1 text{
  font-size: 13px;
  max-width: 80px;
  overflow: hidden; 
  white-space: nowrap;
  text-overflow: ellipsis;
   color: #bfbfbf;
   margin-left:5px; 
}

.addComment{
  position: fixed;
  left: 10px;
  bottom: 10px;
  height: 30px;
  width: 30px;
}