@import "read.wxss";

.reader-info {
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: space-between;
  background: #fff;
}

.reader-info image {
  height: 40px;
  width: 40px;
  border-radius: 50%;
  border: 1px solid #fff;
  margin-left: 5px;
}

.reader-more-info-1 image {
  border: 0px;
  height: 30px;
  width: 30px;
}

.reader-more-info-1 {
  display: flex;
  flex-direction: column;
  align-content: flex-start;
  align-items: flex-start; 
  margin-left: 10px;
}
.reader-more-info-1-1{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: flex-start;
}

.reader-more-info-1 text {
  font-size: 12px;
  color: #666;
}

.book-flow-item {
  display: flex; 
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: center;
  padding: 2px;
  position: absolute;
  background: rgba(255, 255, 255, 0.8);
  border-top-right-radius: 10px;
  border-bottom-right-radius: 10px;
}

.book-flow-item image {
  height: 30px;
  width: 30px;
} 