/* components/autocomplete/autocomplete.wxss */
page{
  font-size: 13px;
  color: #666;
}
 
.container image{
  height: 30px;
  width: 30px;
}
.container{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content:  center;
  
  padding: 0 5px;
}

.container-float input{
  color: #000;
  height: 35px;
  padding-left:5px;
  border-bottom:1px solid #cccccc;
}
.container input{
  color: #000;
  height: 35px;
  padding-left:5px;
  width: 100%;
}

.scroll-view-item{
  display: flex;
  flex-direction: row;
  align-items: center;
  align-content: center;
  justify-content: flex-start;
  height: 45px;
  border-top: 1px solid #666;
}
.scroll-view-item-hover{
  background: #666;  
  font-weight: bold;
}
.scroll-view-item text{
  padding-left:5px; 
}
.container-float-mask{
  position: fixed;
  width: 100%;
  height: 100%;
  left: 0px;
  top: 0; 
  background: rgba(0,0,0,0.6); 
  z-index: 9999;
}
.container-float{
  position: absolute; 
  width: 100%; 
  left: 0px;
  top: 50%;
  margin-top: -180px; 
  background: rgba(255,255,255,1);  
  padding-bottom: 2px;  
}

.button-bottom{
  display: flex;
  flex-direction: row;
  align-content: center;
  align-items: center;
  justify-content: space-between;
  margin-top:30px;    
}

.ok{
  height: 35px;
  line-height: 35px;   
  font-size: 18px;   
  text-align: center; 
  color: green;
  display: inline-block;
  width: 80px;
}

.cancel{
  height: 35px;
  line-height: 35px;  
  color: #666; 
  font-size: 18px;   
  text-align: center;  
  display: inline-block;
  width: 80px;
}
.indicator{
  font-size: 15px;
  font-weight: bold;
  height: 45px;
  line-height: 45px; 
}