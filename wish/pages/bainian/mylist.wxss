/* pages/bainian/index.wxss */
page{
  background: #A60000;
} 
scroll-view{
  overflow:hidden;
  white-space:  nowrap;
}
.container1{
  display: flex;
  flex-direction: column;   
  align-content: center;
  align-items: center;
  background: #A60000;
  padding: 5px 0px; 
  border-bottom: 1px dotted #FFEFDB;
}
.item{   
  position: relative;  
  margin-top:5px; 
}
.nickName{
  position: absolute;
  bottom: 130px;
  left: 70px;
  font-size: 16px;
  color: #fff;
  text-align: left;
  width:80px; 
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.desc1{
  position: absolute;
  bottom: 100px;
  left: 20px;
  font-size: 16px;
  color: yellow;
  text-align: left; 
}
.desc2{
  position: absolute;
  bottom: 80px;
  left: 20px;
  font-size: 15px;
  color: #ccc;
  text-align: left; 
}
.shareBtn{
  height: 35px;
  width: 35px;
  margin: 0px;
  padding: 0px;
  line-height: 35px;
  background: orange;
  position: absolute;
  top: 5px;
  right: 5px;
  text-align: center;
  font-size: 13px;
  color: #fff;
  border-radius: 50%; 
  border:2px solid yellow; 
}
.recordBtn{ 
  height: 40px;
  width: 110px;
  line-height: 40px;
  background: orange;
  position: absolute;
  bottom: 30px;
  left: 50%;
  text-align: center;
  font-size: 15px;
  color: #fff;
  border-radius: 20px;
  margin-left: -60px;
}



.recordBtn button{ 
  height: 40px;
  width: 110px;
  margin-left: 0px;
  margin-right: 0px;
  padding: 0px; 
  position: absolute; 
  opacity: 0;
  z-index: 99;  
  left: 50%;   
  border-radius: 20px;
  margin-left: -60px;
}

.avatar{
  position: absolute;
  bottom: 120px;
  left: 20px;
  height: 35px;
  width: 35px;
  border: 2px solid yellow;
  border-radius: 50%;
}
.bgimg{ 
  border-radius: 8px;
  box-shadow: 0px 0px 10px 3px orange;
}


.myBainianBtn{ 
  height: 40px;
  width: 150px;
  line-height: 40px;
  border:1px solid orange;
  position: absolute; 
  text-align: center;
  font-size: 15px; 
  border-radius: 20px;  
  bottom: 20px;
  left: 50%; 
  color: #fff; 
  margin-left: -75px;
}

.scroll-item{  
  position: relative;
  display: inline-block;  
  margin: 5px;  
  width: 80px;
}

.o-nick-name{
  position: absolute;
  top: 10px;
  left: 35px;
  font-size: 14px;
  color: #fff;
  text-align: left;
  width:60px; 
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.o-avatar{
  position: absolute;
  top: 5px;
  left: 5px;
  height: 25px;
  width: 25px;
  border: 2px solid yellow;
  border-radius: 50%;
}

.o-btn{
  height: 30px;
  width: 80px;
  line-height: 30px; 
  position: absolute;
  top: 40px;
  left: 50%;
  text-align: center;
  font-size: 13px;
  color: #ccc;
  border:1px solid orange;
  border-radius: 20px;
  margin-left: -40px;
}

.o-time{
  position: absolute;
  bottom: 5px;
  left: 5px;
  font-size: 12px;
  color: #ccc;
  text-align: left;
  width:100px; 
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}

.bgmusic{
  position: fixed;
  bottom: 5px;
}
.bgmusic image{
  height: 30px;
  width: 30px;
}