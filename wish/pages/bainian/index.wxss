/* pages/bainian/index.wxss */
page{
  background: #A60000;
}

scroll-view{
  overflow:hidden;
  white-space:  nowrap;
}

.item{  
  position: relative;
  display: inline-block;  
  margin-top: 5px;  
  margin-left:10px;
  margin-right:10px;  
}
.nickName{
  position: absolute;
  bottom: 130px;
  left: 70px;
  font-size: 16px;
  color: #fff;
  text-align: left;
  width:80px; 
  overflow: hidden;
  white-space: nowrap;
  text-overflow: ellipsis;
}
.desc1{
  position: absolute;
  bottom: 100px;
  left: 20px;
  font-size: 16px;
  color: yellow;
  text-align: left; 
}
.desc2{
  position: absolute;
  bottom: 80px;
  left: 20px;
  font-size: 15px;
  color: #ccc;
  text-align: left; 
}
.recordBtn{ 
  height: 40px;
  width: 150px;
  line-height: 40px;
  background: orange;
  position: absolute;
  bottom: 30px;
  left: 50%;
  text-align: center;
  font-size: 15px;
  color: #fff;
  border-radius: 20px;
  margin-left: -75px;
}



.recordBtn button{ 
  height: 40px;
  width: 110px;
  margin-left: 0px;
  margin-right: 0px;
  padding: 0px; 
  position: absolute; 
  opacity: 0;
  z-index: 99;  
  left: 50%;   
  border-radius: 20px;
  margin-left: -60px;
}

.avatar{
  position: absolute;
  bottom: 120px;
  left: 20px;
  height: 35px;
  width: 35px;
  border: 2px solid yellow;
  border-radius: 50%;
}
.bgimg{ 
  border-radius: 8px;
  box-shadow: 0px 0px 10px 3px orange;
}


.myBainianBtn{ 
  height: 40px;
  width: 150px;
  line-height: 40px;
  border:1px solid orange;
  position: absolute; 
  text-align: center;
  font-size: 15px; 
  border-radius: 20px;  
  bottom: 20px;
  left: 50%; 
  color: #fff; 
  margin-left: -75px;
  background: rgba(0, 0, 0, 0);
}

.bgmusic{
 position: fixed;
  bottom: 5px;
  
}
.bgmusic image{
  height: 30px;
  width: 30px;
}